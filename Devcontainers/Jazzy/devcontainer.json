{
    "name": "ROS2 jazzy container",
    "privileged": true,
    "remoteUser": "robo_user",
    "build":{
        "dockerfile": "Dockerfile",
        "args":{
            "USERNAME":"robo_user"
        }
    },
    "workspaceFolder": "/home/robo_user",
    "workspaceMount": "source=${localWorkspaceFolder},target=/home/robo_user,type=bind",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cpptools-themes",
                "twxs.cmake",
                "donjayamanne.python-extension-pack",
                "ms-iot.vscode-ros"
            ]
        }
    },
    "containerEnv": {
        "DISPLAY":"unix:0",
        "ROS_AUTOMATIC_DISCOVERY_RANGE":"LOCALHOST",
        "ROS_DOMAIN_ID":"1"
    },
    "runArgs": [
        "--net=host",
        "--pid=host",
        "--ipc=host",
        "-e",
        "DISPLAY=${env:DISPLAY}"
    ],
    "mounts":[
        "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind,consistency=cached",
        "source=/dev/dri,target=/dev/dri,type=bind,consistency=cached"
    ]
}